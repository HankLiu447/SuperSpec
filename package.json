{
  "name": "superspec",
  "version": "0.1.5",
  "description": "SuperSpec - Unified spec-driven development framework",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "superspec": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "superspec",
    "tdd",
    "specification",
    "development",
    "workflow",
    "testing",
    "bdd",
    "documentation"
  ],
  "author": "Hank Liu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HankLiu447/superspec.git"
  },
  "bugs": {
    "url": "https://github.com/HankLiu447/superspec/issues"
  },
  "homepage": "https://github.com/HankLiu447/superspec#readme",
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "ora": "^9.0.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "templates/",
    "schemas/",
    "skills/",
    "commands/"
  ]
}
